<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bg_color"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号" />

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/register_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/register_edit_bg"
            android:hint="@string/register_email"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_pwd_margin"
            android:text="密码" />

        <EditText
            android:id="@+id/register_pwd_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:background="@drawable/register_edit_bg"
            android:hint="@string/register_pwd"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_pwdconfirm_margin"
            android:text="确认密码" />

        <EditText
            android:id="@+id/register_pwdconfirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:background="@drawable/register_edit_bg"
            android:hint="@string/register_pwdconfirm"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_alert_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/register_alert_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/register_alert_color" />

    <Button
        android:id="@+id/register_complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/register_completebtn_up" />

</LinearLayout>